<h1>Listing images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Original</th>
      <th>Final</th>
      <th>Height</th>
      <th>Width</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.original %></td>
        <td><%= image.final %></td>
        <td><%= image.height %></td>
        <td><%= image.width %></td>
        <td><%= link_to 'Show', project_image_path(@project,image) %></td>
        <td><%= link_to 'Edit', edit_project_image_path(@project,image) %></td>
        <td><%= link_to 'Destroy', project_image_path(@project, image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_project_image_path %>
